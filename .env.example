# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=digital-property-insights
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_storage_bucket.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Google Genkit AI Configuration
NEXT_PUBLIC_GENKIT_API_URL=https://api.genkit.google.com
GENKIT_API_KEY=your_google_genkit_api_key_here

# Email Service Configuration (Choose one)
# Option 1: SendGrid (Recommended)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@digitalpropertyinsights.com.au
SENDGRID_TO_EMAIL=your_email@digitalpropertyinsights.com.au

# Option 2: Resend (Alternative)
# RESEND_API_KEY=your_resend_api_key_here
# RESEND_FROM_EMAIL=noreply@digitalpropertyinsights.com.au
# RESEND_TO_EMAIL=your_email@digitalpropertyinsights.com.au

# Option 3: SMTP (Alternative)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_specific_password
# SMTP_FROM_EMAIL=noreply@digitalpropertyinsights.com.au
# SMTP_TO_EMAIL=your_email@digitalpropertyinsights.com.au

# Rate Limiting & Security
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=5
RATE_LIMIT_WINDOW_MS=3600000

# Application Environment
NODE_ENV=development
# NODE_ENV=production (use in production)